<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.iths.javaprog.toni.drawingshapes.DrawingController">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem onAction="#onSave" text="Save" />
                    <MenuItem onAction="#onExit" text="Exit" />
                </Menu>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="100.0">
                <HBox alignment="CENTER" spacing="5">
                    <Button fx:id="circleButton" onAction="#onCircleButtonClick" text="Circle" />
                </HBox>
            </ToolBar>

        </VBox>
    </top>

    <center>
        <Canvas fx:id="canvas" height="600" onMouseClicked="#canvasClick" width="800" />
    </center>

    <left>
        <VBox>
              <ColorPicker fx:id="colorPicker" prefHeight="30.0" prefWidth="55.0" />
              <Slider fx:id="slider" orientation="VERTICAL" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
        </VBox>
    </left>

    <stylesheets>
        <URL value="@css/stylesheet.css" />
    </stylesheets>

</BorderPane>
