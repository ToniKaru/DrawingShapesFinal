        </VBox>
    </top>

    <center>
        <Canvas fx:id="canvas" height="600" onMouseClicked="#canvasClick" width="800" />
    </center>

    <left>
        <VBox>
              <ColorPicker fx:id="colorPicker" prefHeight="30.0" prefWidth="55.0" />
              <Slider fx:id="slider" orientation="VERTICAL" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
         <Button fx:id="undoButton" mnemonicParsing="false" text="Undo" onMouseClicked="#undoButtonClick"/>
         <Button fx:id="redoButton" mnemonicParsing="false" text="Redo" onMouseClicked="#redoButtonClick"/>
            <Button fx:id="clearButton" mnemonicParsing="false" text="Clear" onMouseClicked="#onClearButtonClick"/>

        </VBox>
    </left>

    <stylesheets>
        <URL value="@css/stylesheet.css" />
    </stylesheets>

</BorderPane>
